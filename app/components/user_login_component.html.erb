<div>
  <% if user_signed_in? %>
    <%= link_to destroy_user_session_path, method: :delete, data: { turbo: "false" }, class:"test-user-signed-in inline-flex justify-center items-center h-10 w-10  p-2.5 border border-transparent rounded-full shadow-sm text-2xl text-white bg-violet-400 hover:bg-violet-300 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-violet-500" do %>
      <%= current_user.username&.first %>
    <% end %>

  <% else %>
    <%= link_to new_user_session_path, class:"test-user-signed-out inline-flex justify-center items-center h-10 w-10  p-2.5 border border-transparent rounded-full shadow-sm text-white bg-violet-400 hover:bg-violet-300 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-violet-500" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
      </svg>
    <% end %>
  <% end %>
</div>
